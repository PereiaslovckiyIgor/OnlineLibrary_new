@model LibOnline.Models.Account.RecoveryModel


<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/css/loginPage.css" />
</head>

<div class="container">
    <section id="content">
        <form asp-action="Recovery" asp-controller="Account" asp-anti-forgery="true">
            @*<div class="validation" asp-validation-summary="ModelOnly"></div>*@
            
            <h1>Востановление пароля</h1>

            <div class="form-group">
                <input type="text" asp-for="Email" placeholder="E-Mail" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Новый пароль" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Повторите пароль" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div class="form-group">
                <input type="submit" value="Востановить" class="btn" />
                <a asp-controller="Account" asp-action="Register" style="color:#d8450b">Регистрация</a>
                <a asp-controller="Account" asp-action="Login" style="color:#d8450b">Войти</a>
            </div>
        </form><!-- form -->

    </section><!-- content -->
</div><!-- container -->


<script>
    $(document).ready(function () {
        debugger;

        let msg = '@ViewBag.result';
        if (msg === "error")
            swal("Ошибка", "Пароль не востанвлен", msg);

        let WinhHeight = $(window).height();
        let DocHeight = $(document).height();

        if (WinhHeight < DocHeight) {
            $("#idFooter").css({ position: 'fixed', top: '87%' });
        } else {
            $("#idFooter").css({ position: '', top: '' });
        }
    });
</script>