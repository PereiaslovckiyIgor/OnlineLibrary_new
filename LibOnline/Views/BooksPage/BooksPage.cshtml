<script src="~/js/Scripts/BooksPage.js"></script>



@functions
{
public bool IsAuthenticated()
{
    return Context.User.Identity.IsAuthenticated;
}
}
<!-- Для чтения получения данных из ViewBag в фале скриптов -->
<input type="hidden" id="idBook" data-value="@ViewBag.Page.IdBook" />
<input type="hidden" id="idPage" data-value="@ViewBag.Page.IdPage" />

<!--Пагинация -->
<input type="hidden" id="idPageNumber" data-value="@ViewBag.pagePagination.PageNumber" />
<input type="hidden" id="idCountPages" data-value="@ViewBag.pagePagination.CountPages" />

<div class="span10 offset1">

    <br>

    @if (IsAuthenticated())
    {
        <h6 class="title-bg title-bg-white" style="height:25px;">
            <button id="btnUserBookmark" class="btn btn-small btn-warning">Закладка <i class="icon-bookmark"></i></button>
            <span class="right btn-group">
                <button id="btnIncreaseTextSize" class="btn btn-small btn-inverse">Aa+</button>
                <button id="btnReduceTextSize" class="btn btn-small btn-inverse">Aa-</button>
                <button id="btnSaveUserSettings" class="btn btn-small btn-inverse">Сохранить</button>
            </span>
        </h6>
    }
    <div id="PageText" class="project-details project-details-page" style="font-size:@ViewBag.Page.TextFontSize">
        <p>
            @ViewBag.Page.PageContent
        </p>

        <p class="pageNamber"> @ViewBag.Page.PageNumber стр.</p>
    </div>


    @*DIV Пагинация*@
    <div id="pagin" class="m-pagination"></div>

</div>