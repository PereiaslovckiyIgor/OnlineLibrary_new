
    <div class="span3 sidebar page-left-sidebar">

        <div class="input-append">
            <form action="#">
                <input id="appendedInputButton" size="16" type="text" placeholder="Поиск"><button class="btn" type="button"><i class="icon-search"></i></button>
            </form>
        </div>

        <h5 class="title-bg">Жанры</h5>
        <ul class="post-category-list" id="ulAllCategories"></ul>
