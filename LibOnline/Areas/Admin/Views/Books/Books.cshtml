<div id="mainDiv" class="col-sm-offset-3" style="visibility:hidden;">

    <div style="margin-top:5%">


        <button id="btnAddNewBook" style="height:25pt;margin:10pt;">Добавить Книгу</button>
        <button id="btnUpdateBook" style="height:25pt">Изменить Книгу</button>

        <div id="jqxgrid"></div>
    </div>

    <div id="test"></div>

    <!--Insert Book-->
    <div id="dialodAddNewBook" style="display:none">
        <div>

            <div id='jqxtabs'>
                <ul style='margin-left: 20px;'>
                    <li>Название и описание</li>
                    <li>Книга и год </li>
                    <li>Изображение</li>
                    <li>Авторы и жанры</li>
                </ul>
                <div>
                    <div style="margin:5pt;">
                        <input id='input' />
                    </div>

                    <div style="height:85%;margin-left:5pt;">
                        <textarea id="editor"></textarea>
                    </div>
                </div>
                <div>
                    <table style="margin-top:10%">
                        <tr>
                            <td style="padding-left:5%">
                                <label>Выберите файл</label>
                                <div id="jqxBookFileUpload"></div>
                            <td>
                            <td style="padding-left:10%">
                                <label>Год Издания</label>
                                <div id='jqxDateTimeInput'></div>
                            <td>
                        </tr>
                    </table>
                </div>
                <div>
                    <table>
                        <tr>
                            <td>
                                <img id="imgNewBook" asp-append-version="true"
                                     style="height:200pt;width:150pt; margin:20pt"
                                     src="~/LibData/img/generalBook.jpg" />
                            </td>
                            <td>
                                <div id="jqxFileUpload"></div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div>
                    <div style="margin-left:25%; margin-top:5%;">
                        <label for="selAddAuthors"> Добавть Автора(-ов) </label>
                        <select id="selAddAuthors" multiple class="chosen-select" data-placeholder="Автор">
                            @foreach (var item in ViewBag.authors)
                            {
                                <option value="@item.IdAuthor">@item.AuthorFullName</option>
                            }
                        </select>
                    </div>

                    <div style="margin-left:25%;margin-top:5%;">
                        <label for="selAddAuthors"> Добавить Жанр(-ы) </label>
                        <select id="selAddCategories" multiple class="chosen-select" data-placeholder="Жанр">
                            @foreach (var item in ViewBag.categories)
                            {
                                <option value="@item.IdCategory">@item.CategoryName</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>


        <div style="position:absolute; bottom:10px; right:10px">
            <button id="btnConfirmAddBook" class="pull-right" style="height:25pt;margin:5pt;">Подтвердить</button>
            <button id="btnCanselAddBook" class="pull-right" style="height:25pt;margin:5pt;">Отмена</button>
        </div>
    </div>


    <div id="messageNotification" style="margin-top:35%; display:none">
        <div id="jqxNotificationShow"></div>
    </div>
</div>


