
    <div class="span3 sidebar page-left-sidebar">

        <div class="input-append">
            <form asp-action="Search" asp-controller="BooksCategories" method="post">
                <input id="appendedInputButton" size="16" type="text" placeholder="Поиск" name="Search">
                <button class="btn" type="submit"><i class="icon-search"></i></button>
            </form>
