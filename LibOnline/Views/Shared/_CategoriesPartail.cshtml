    <script>
    $(document).ready(function () {
        $.ajax({
            // Для обращение к методам одного контроллера из любого друго
            url: '@Url.Content("~/Home/GetAllCategories")',
            success: function (result) {
                RenderCategoriesList(result);
            },
        });

        function RenderCategoriesList(result) {
            debugger;
            var categoriesHTML = '';
            $.each(result, function () {
                var idCat = this.idCategory;
                categoriesHTML += '<li><a href="/BooksCategories/GetBooksCategories?idCategory=' + this.idCategory +'&pageNumber=1"><i class="icon-plus-sign"></i>' + this.categoryName + '</a></li>';
                });
            $('#ulAllCategories').html(categoriesHTML);
        }//RenderCategoriesList

    });// document.ready
    </script>
