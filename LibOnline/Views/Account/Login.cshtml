@model LibOnline.Models.Account.LoginModel

<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/css/loginPage.css" />
</head>
    
<div class="container">
        <section id="content">
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                @*<div class="validation" asp-validation-summary="ModelOnly"></div>*@
                <h1>Войти</h1>
                <div class="form-group">
                    <input type="text" asp-for="Login" placeholder="Логин" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn" />
                    <a asp-controller="Account" asp-action="Recovery" style="color:#d8450b">Забыли пароль?</a>
                    <a asp-controller="Account" asp-action="Register" style="color:#d8450b">Регистрация</a>
                </div>
            </form><!-- form -->
        </section><!-- content -->
    </div><!-- container -->


<script>
    $(document).ready(function () {
        let msg = '@ViewBag.result';
        if (msg === "error")
            swal("Вход не выполнен", "Проверте имя пользователя или пароль", msg);
    });
</script>